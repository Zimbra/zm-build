


# __STORE

store: CUR_DEST_ROOT := $(STORE_DEST_ROOT)
store: CUR_PACKAGE_SPEC := $(BUILD_ROOT)/zimbra.spec
store: CUR_PACKAGE_NAME := zimbra-store
store: $(PACKAGE_DIR) store_stage store_pkg_spec_$(PACKAGE_EXT)
	(cd $(CUR_DEST_ROOT); \
		$(PACKAGING_COMMAND) $(PACKAGING_OPTIONS) )

store_pkg_spec_ccs:

store_pkg_spec_pkg: $(BUILD_ROOT)/resources/zimbra-store $(BUILD_ROOT)/zimbra-store.Info.plist $(BUILD_ROOT)/zimbra-store.Description.plist 

$(BUILD_ROOT)/zimbra-store.Description.plist:
	cat $(PACKAGE_CONF_DIR)/Spec/zimbra-store.Description.plist | \
	sed -e 's/@@VERSION@@/$(VERSION_TAG)/' \
	-e 's/@@RELEASE@@/$(RELEASE)/' \
	-e 's/@@MAJOR@@/$(MAJOR)/' \
	-e 's/@@MINOR@@/$(MINOR)/' > $@

$(BUILD_ROOT)/zimbra-store.Info.plist:
	cat $(PACKAGE_CONF_DIR)/Spec/zimbra-store.Info.plist | \
	sed -e 's/@@VERSION@@/$(VERSION_TAG)/' \
	-e 's/@@RELEASE@@/$(RELEASE)/' \
	-e 's/@@MAJOR@@/$(MAJOR)/' \
	-e 's/@@BUILDNUM@@/$(BUILDNUM)/' \
	-e 's/@@MINOR@@/$(MINOR)/' > $@

$(BUILD_ROOT)/resources/zimbra-store:
	mkdir -p $@
	cp $(PACKAGE_CONF_DIR)/Spec/Scripts/zimbra-store.postinstall $@/postinstall
	chmod 755 $@/postinstall
	cp $(PACKAGE_CONF_DIR)/Spec/Scripts/zimbra-store.postupgrade $@/postupgrade
	chmod 755 $@/postupgrade

store_pkg_spec_deb: $(STORE_DEST_ROOT)/DEBIAN/control

$(STORE_DEST_ROOT)/DEBIAN: force
	mkdir -p $@
	cp $(PACKAGE_CONF_DIR)/Spec/Scripts/zimbra.pre $@/preinst
	echo "#!/bin/bash" > $@/postinst
	echo "sh /opt/zimbra/libexec/zmfixperms" >> $@/postinst
	cat $(PACKAGE_CONF_DIR)/Spec/Scripts/zimbra.post >> $@/postinst
	chmod 555 $@/*

$(STORE_DEST_ROOT)/DEBIAN/control: $(STORE_DEST_ROOT)/DEBIAN force
	cat $(PACKAGE_CONF_DIR)/Spec/zimbrastore.deb | \
	sed -e 's/@@VERSION@@/$(VERSION_TAG)/' \
	-e 's/@@RELEASE@@/$(RELEASE)/' \
	-e 's/@@ARCH@@/$(ARCH)/' > $@

store_pkg_spec_rpm: $(BUILD_ROOT)/zimbra.spec

$(BUILD_ROOT)/zimbra.spec:
	cp $(PACKAGE_CONF_DIR)/Spec/Scripts/zimbra.pre $(BUILD_ROOT)
	cp $(PACKAGE_CONF_DIR)/Spec/Scripts/zimbra.post $(BUILD_ROOT)
	cat $(PACKAGE_CONF_DIR)/Spec/zimbra.spec | \
		sed -e 's/@@VERSION@@/$(VERSION_TAG)/' \
		-e 's/@@RELEASE@@/$(RELEASE)/' \
		-e 's/^Copyright:/$(RPMCOPYRIGHTSTR):/' \
		-e '/^%pre$$/ r zimbra.pre' \
		-e '/^%post$$/ r zimbra.post' > $(BUILD_ROOT)/zimbra.spec
	rm -f zimbra.pre
	rm -f zimbra.post
	echo "%attr(-, zimbra, zimbra) /opt/zimbra/zimlets" >> \
		$(BUILD_ROOT)/zimbra.spec
	echo "%attr(-, zimbra, zimbra) /opt/zimbra/zimlets-extra" >> \
		$(BUILD_ROOT)/zimbra.spec
	echo "%attr(-, zimbra, zimbra) /opt/zimbra/apache-tomcat-5.5.15" >> \
		$(BUILD_ROOT)/zimbra.spec
	echo "%attr(-, zimbra, zimbra) /opt/zimbra/wiki" >> \
		$(BUILD_ROOT)/zimbra.spec
	echo "%attr(-, zimbra, zimbra) /opt/zimbra/perdition-1.17" >> \
		$(BUILD_ROOT)/zimbra.spec
	echo "%attr(-, zimbra, zimbra) /opt/zimbra/mysql-standard-$(MYSQL_VERSION_STRING)-pc-linux-gnu-i686-glibc23" >> \
		$(BUILD_ROOT)/zimbra.spec

store_stage: $(STORE_COMPONENTS) $(ZIMLET_COMPONENTS)

$(STORE_DEST_DIR):
	mkdir -p $@

$(STORE_DEST_DIR)/$(MYSQL_DIR):
	@echo "*** Creating mysql"
	(cd $(STORE_DEST_DIR); tar xzf $(MYSQL_SOURCE).tar.gz;)
	(cd $(STORE_DEST_DIR)/$(MYSQL_DIR)/lib; tar xzf $(THIRD_PARTY)/mysql/$(BUILD_PLATFORM)/mysql-$(MYSQL_CLIENT_VERSION).tgz)
	rm -f $(STORE_DEST_DIR)/$(MYSQL_DIR)/bin/mysqltest_embedded
	rm -f $(STORE_DEST_DIR)/$(MYSQL_DIR)/bin/mysql_client_test_embedded
	rm -rf $(STORE_DEST_DIR)/$(MYSQL_DIR)/mysql-test
	rm -rf $(STORE_DEST_DIR)/$(MYSQL_DIR)/sql-bench
	rm -rf $(STORE_DEST_DIR)/$(MYSQL_DIR)/docs/mysql.info
	rm -rf $(STORE_DEST_DIR)/$(MYSQL_DIR)/docs/manual.txt

$(STORE_DEST_DIR)/$(PERDITION_DIR)-$(PERDITION_VERSION): $(STORE_DEST_DIR)
	@echo "*** Creating perdition"
	(cd $(STORE_DEST_DIR); tar xzf $(PERDITION_SOURCE).tgz;)

$(STORE_DEST_DIR)/$(TOMCAT_DIR)/bin: $(STORE_DEST_DIR) force
	@echo "*** Creating tomcat"
	(cd $(STORE_DEST_DIR); tar xzf $(TOMCAT_SOURCE).tar.gz;)

$(STORE_DEST_DIR)/$(TOMCAT_DIR)/conf: force
	mkdir -p $@
	cp -f $(SERVICE_DIR)/conf/tomcat-5.5/context.xml \
		$(STORE_DEST_DIR)/$(TOMCAT_DIR)/conf/context.xml
	cp -f $(SERVICE_DIR)/conf/tomcat-5.5/server.xml.production \
		$(STORE_DEST_DIR)/$(TOMCAT_DIR)/conf/server.xml.in
	cp -f $(SERVICE_DIR)/conf/zimbra.xml \
		$(STORE_DEST_DIR)/$(TOMCAT_DIR)/conf/Catalina/localhost/zimbra.xml
	mkdir -p $(STORE_DEST_DIR)/$(TOMCAT_DIR)/conf/AdminService/localhost
	cp -f $(SERVICE_DIR)/conf/zimbraAdmin.xml \
		$(STORE_DEST_DIR)/$(TOMCAT_DIR)/conf/AdminService/localhost/zimbraAdmin.xml
	cp -f $(SERVICE_DIR)/conf/tomcat-5.5/tomcat-users.xml $(STORE_DEST_DIR)/$(TOMCAT_DIR)/conf
	cp -f $(SERVICE_DIR)/build/dist/conf/log4j.properties  \
		$(STORE_DEST_DIR)/$(TOMCAT_DIR)/conf/log4j.properties
	cp -f $(SERVICE_DIR)/conf/web.xml.production \
		$(STORE_DEST_DIR)/$(TOMCAT_DIR)/conf/service.web.xml.in
	cp -f zimbraConf/web.xml \
		$(STORE_DEST_DIR)/$(TOMCAT_DIR)/conf/zimbra.web.xml.in
	cp -f zimbraAdminConf/web.xml \
		$(STORE_DEST_DIR)/$(TOMCAT_DIR)/conf/zimbraAdmin.web.xml.in
	cp -f $(SERVICE_DIR)/conf/tomcat-5.5/web.xml \
		$(STORE_DEST_DIR)/$(TOMCAT_DIR)/conf/web.xml

$(STORE_DEST_DIR)/$(TOMCAT_DIR)/temp: force
	mkdir -p $(STORE_DEST_DIR)/$(TOMCAT_DIR)/temp
	touch $(STORE_DEST_DIR)/$(TOMCAT_DIR)/temp/.emptyfile

$(STORE_DEST_DIR)/$(TOMCAT_DIR): $(STORE_DEST_DIR) $(STORE_DEST_DIR)/$(TOMCAT_DIR)/bin $(STORE_DEST_DIR)/$(TOMCAT_DIR)/conf $(STORE_DEST_DIR)/$(TOMCAT_DIR)/temp $(STORE_DEST_DIR)/$(TOMCAT_DIR)/common/lib

$(WEBAPP_DIR): 
	mkdir -p $@

$(STORE_DEST_DIR)/wiki:
	mkdir -p $@
	cp -R $(SERVICE_DIR)/build/dist/wiki/Template $@

$(ZIMLET_DIR)/build/dist/zimlets/nofile:
	(cd $(ZIMLET_DIR); $(ANT) \
		-Dplat.tag=$(BUILD_PLATFORM) \
		-Dzimbra.buildinfo.version=$(VERSION_TAG) \
		-Dzimbra.buildinfo.release=$(RELEASE) -Dzimbra.buildinfo.date=$(DATE) \
		-Dzimbra.buildinfo.host=$(HOST) package-zimlets ; )

$(ZIMLET_DIR)/build/dist/zimlets-extra/nofile:
	(cd $(ZIMLET_DIR); $(ANT) \
		-Dplat.tag=$(BUILD_PLATFORM) \
		-Dzimbra.buildinfo.version=$(VERSION_TAG) \
		-Dzimbra.buildinfo.release=$(RELEASE) -Dzimbra.buildinfo.date=$(DATE) \
		-Dzimbra.buildinfo.host=$(HOST) package-zimlets-extra ; )

$(STORE_DEST_DIR)/zimlets-extra: $(ZIMLET_DIR)/build/dist/zimlets-extra/nofile
	mkdir -p $@
	cp $(ZIMLET_DIR)/build/dist/zimlets-extra/* $@

$(STORE_DEST_DIR)/zimlets: $(ZIMLET_DIR)/build/dist/zimlets/nofile
	mkdir -p $@
	cp $(ZIMLET_DIR)/build/dist/zimlets/* $@

$(WEBAPP_DIR)/zimbra/downloads:
	mkdir -p $@
	cp $(SERVICE_DIR)/src/windows/*exe $@
	cp $(SERVICE_DIR)/src/macosx/*dmg $@

$(STORE_DEST_DIR)/$(TOMCAT_DIR)/webapps/service/WEB-INF/lib/zimbrataglib.jar: $(ZIMLET_DIR)/build/dist/lib/zimbrataglib.jar
	mkdir -p $(STORE_DEST_DIR)/$(TOMCAT_DIR)/webapps/service/WEB-INF/lib
	cp $(ZIMLET_DIR)/build/dist/lib/zimbrataglib.jar $@

$(ZIMLET_DIR)/build/dist/lib/zimbrataglib.jar:
	(cd $(ZIMLET_DIR); ant package)

$(STORE_DEST_DIR)/$(TOMCAT_DIR)/webapps/service/WEB-INF/zimbra.tld: $(ZIMLET_DIR)/build/dist/conf/zimbra.tld
	mkdir -p $(STORE_DEST_DIR)/$(TOMCAT_DIR)/webapps/service/WEB-INF
	cp $(ZIMLET_DIR)/build/dist/conf/zimbra.tld $@

$(ZIMLET_DIR)/build/dist/conf/zimbra.tld:
	(cd $(ZIMLET_DIR); ant package)

