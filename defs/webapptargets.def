
# __WAR 

BUILD_TYPE := FOSS

MWDOWNLOAD = $(shell cd $(WEBAPP_DIR)/zimbra/downloads; ls ZCSExhangeMigrationWizard*)
IWDOWNLOAD = $(shell cd $(WEBAPP_DIR)/zimbra/downloads; ls ZCSPSTImportWizard*)
CNDOWNLOAD = $(shell cd $(WEBAPP_DIR)/zimbra/downloads; ls ZimbraOl*)
CMDOWNLOAD = $(shell cd $(WEBAPP_DIR)/zimbra/downloads; ls ZmCus*)
DMDOWNLOAD = $(shell cd $(WEBAPP_DIR)/zimbra/downloads; ls ZCSDominoMigrationWizard*)
ZTDOWNLOAD = $(shell cd $(WEBAPP_DIR)/zimbra/downloads; ls ZimbraToast*)
#GWDOWNLOAD = $(shell cd $(WEBAPP_DIR)/zimbra/downloads; ls ZCSGroupwiseMigrationWizard*)

$(WEBAPP_DIR)/service.war: $(WEBAPP_DIR) $(SERVICE_DIR)/$(WEBAPP_BUILD_DIR)/service.war
	-mkdir $(WEBAPP_DIR)/service
	(cd $(WEBAPP_DIR)/service; jar xf $(SERVICE_DIR)/build/dist/$(MAILBOXD_SERVER)/webapps/service.war)

$(SERVICE_DIR)/$(WEBAPP_BUILD_DIR)/service.war:
	(cd $(SERVICE_DIR); $(ANT) \
		-Dplat.tag=$(BUILD_PLATFORM) \
		-Dis-production=1 \
		-Dzimbra.buildinfo.version=$(VERSION_TAG) \
		-Dzimbra.buildinfo.type=$(BUILD_TYPE) \
		-Dzimbra.buildinfo.release=$(RELEASE) -Dzimbra.buildinfo.date=$(DATE) \
		-Dzimbra.buildinfo.host=$(HOST) dev-dist ; )

$(WEBAPP_DIR)/zimbraAdmin.war: $(WEBAPP_DIR) $(CONSOLE_DIR)/$(WEBAPP_BUILD_DIR)/zimbraAdmin.war
	mkdir $(WEBAPP_DIR)/zimbraAdmin
	(cd $(WEBAPP_DIR)/zimbraAdmin; jar xf $(CONSOLE_DIR)/build/dist/$(MAILBOXD_SERVER)/webapps/zimbraAdmin.war)
	for download in $(IWDOWNLOAD); do \
		echo "IMPORT_WIZ_DOWNLOAD_LINK = <A HREF=\"/zimbra/downloads/$$download\" target=_blank onclick='ZaZimbraAdmin.unloadHackCallback();'>PST Import Wizard</A>" >> $(WEBAPP_DIR)/zimbraAdmin/WEB-INF/classes/messages/ZaMsg.properties; \
	done
	for download in $(MWDOWNLOAD); do \
		echo "MIG_WIZ_DOWNLOAD_LINK = <A HREF=\"/zimbra/downloads/$$download\" target=_blank onclick='ZaZimbraAdmin.unloadHackCallback();'>ZCS Migration Wizard for Exchange</A>" >> $(WEBAPP_DIR)/zimbraAdmin/WEB-INF/classes/messages/ZaMsg.properties; \
	done
	for download in $(CNDOWNLOAD); do \
		echo "CONNECTOR_DOWNLOAD_LINK = <A HREF=\"/zimbra/downloads/$$download\" target=_blank onclick='ZaZimbraAdmin.unloadHackCallback();'>Zimbra Connector for Outlook</A>" >> $(WEBAPP_DIR)/zimbraAdmin/WEB-INF/classes/messages/ZaMsg.properties; \
	done
	for download in $(CMDOWNLOAD); do \
		echo "CONNECTOR_MSI_DOWNLOAD_LINK = <A HREF=\"/zimbra/downloads/$$download\" target=_blank onclick='ZaZimbraAdmin.unloadHackCallback();'>Zimbra Connector for Outlook MSI Customizer</A>" >> $(WEBAPP_DIR)/zimbraAdmin/WEB-INF/classes/messages/ZaMsg.properties; \
	done
	for download in $(DMDOWNLOAD); do \
		echo "DOMINO_MIG_WIZ_DOWNLOAD_LINK = <A HREF=\"/zimbra/downloads/$$download\" target=_blank onclick='ZaZimbraAdmin.unloadHackCallback();'>ZCS Migration Wizard for Domino</A>" >> $(WEBAPP_DIR)/zimbraAdmin/WEB-INF/classes/messages/ZaMsg.properties; \
	done
	for download in $(ZTDOWNLOAD); do \
		echo "ZIMBRA_TOASTER_DOWNLOAD_LINK = <A HREF=\"/zimbra/downloads/$$download\" target=_blank onclick='ZaZimbraAdmin.unloadHackCallback();'>Zimbra Toaster</A>" >> $(WEBAPP_DIR)/zimbraAdmin/WEB-INF/classes/messages/ZaMsg.properties; \
	done
#	for download in $(GWDOWNLOAD); do \
#		echo "GROUPWISE_MIG_WIZ_DOWNLOAD_LINK = <A HREF=\"/zimbra/downloads/$$download\" target=_blank>ZCS Migration Wizard for GroupWise</A>" >> $(WEBAPP_DIR)/zimbraAdmin/WEB-INF/classes/msgs/ZaMsg.properties; \
#	done
#

$(CONSOLE_DIR)/$(WEBAPP_BUILD_DIR)/zimbraAdmin.war:
	(cd $(CONSOLE_DIR); $(ANT) \
		-Dplat.tag=$(BUILD_PLATFORM) \
		-Dzimbra.buildinfo.version=$(VERSION_TAG) \
		-Dzimbra.buildinfo.type=$(BUILD_TYPE) \
		-Dzimbra.buildinfo.release=$(RELEASE) -Dzimbra.buildinfo.date=$(DATE) \
		-Dzimbra.buildinfo.host=$(HOST) clean admin prod war; )
	rm -rf zimbraAdminConf
	mkdir zimbraAdminConf
	cp $(CONSOLE_DIR)/build/web.xml zimbraAdminConf

$(WEBAPP_DIR)/zimbra.war: $(WEBAPP_DIR) $(CONSOLE_DIR)/$(WEBAPP_BUILD_DIR)/zimbra.war $(STORE_DEST_DIR)/$(MAILBOXD_DIR)/work
	mkdir $(WEBAPP_DIR)/zimbra
	(cd $(WEBAPP_DIR)/zimbra; jar xf $(CONSOLE_DIR)/build/dist/$(MAILBOXD_SERVER)/webapps/zimbra.war)

$(STORE_DEST_DIR)/$(MAILBOXD_DIR)/work: $(CONSOLE_DIR)/$(WEBAPP_BUILD_DIR)/zimbra.war
	mkdir -p $@
	cp -rf $(CONSOLE_DIR)/build/dist/$(MAILBOXD_SERVER)/work/* $@
    

$(CONSOLE_DIR)/$(WEBAPP_BUILD_DIR)/zimbra.war:  $(TAGLIB_DIR)/build/zimbrataglib.jar
	(cd $(CONSOLE_DIR); $(ANT) \
		-Dplat.tag=$(BUILD_PLATFORM) \
		-Dzimbra.buildinfo.version=$(VERSION_TAG) \
		-Dzimbra.buildinfo.type=$(BUILD_TYPE) \
		-Dzimbra.buildinfo.release=$(RELEASE) -Dzimbra.buildinfo.date=$(DATE) \
		-Dzimbra.buildinfo.host=$(HOST) clean prod-build; )
	rm -rf zimbraConf
	mkdir zimbraConf
	cp $(CONSOLE_DIR)/build/web.xml zimbraConf

$(TAGLIB_DIR)/build/zimbrataglib.jar:
	(cd $(TAGLIB_DIR); $(ANT) \
		-Dplat.tag=$(BUILD_PLATFORM) \
		-Dis-production=1 \
		-Dzimbra.buildinfo.version=$(VERSION_TAG) \
		-Dzimbra.buildinfo.type=$(BUILD_TYPE) \
		-Dzimbra.buildinfo.release=$(RELEASE) -Dzimbra.buildinfo.date=$(DATE) \
		-Dzimbra.buildinfo.host=$(HOST) clean jar ; )

